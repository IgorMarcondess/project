<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#FFFFFF"/> <!-- Cor de fundo -->

    <corners android:radius="16dp"/> <!-- Raio dos cantos arredondados -->

    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/> <!-- Padding interno -->

    <stroke
        android:width="1dp"
        android:color="#CCCCCC"/> <!-- Cor e largura da borda -->
</shape>
